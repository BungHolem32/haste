{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2016",
        //"module": "system",
        "moduleResolution": "node",
        "pretty": true,
        "newLine": "LF",
        //"allowSyntheticDefaultImports": true,
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "sourceMap": true,
        "skipLibCheck": true,
        "allowJs": true,
        "noImplicitAny": false,
        "jsx": "preserve"
    },
    "exclude": [
      "node_modules"
    ],
    "typeAcquisition": {
        "enable": true
    }
}
